<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieFragment">
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.krs.movie.app.ui.movie.MovieFragment"
        android:label="Popular Movies" >
        <action
            android:id="@+id/action_movieFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.krs.movie.app.ui.movie.MovieDetailsFragment"
        android:label="Movies Details"
        tools:layout="@layout/fragment_movie_details" >
        <argument
            android:name="selected_movie"
            app:argType="com.krs.movie.app.data.model.Movie"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>